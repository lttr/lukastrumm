{
  "name": "lukastrumm",
  "private": true,
  "description": "Site about software engineering on the web",
  "engines": {
    "node": ">=8.0"
  },
  "homepage": "https://lukastrumm.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:lttr/lukastrumm.git"
  },
  "author": "Lukas Trumm",
  "license": "MIT",
  "scripts": {
    "build:submodules": "run-s -l build:submodules:install build:submodules:build build:submodule:*",
    "build:submodule:shortcuts": "copyfiles -u 2 \"shortcuts/build/**/*\" build/shortcuts/",
    "build:submodule:talks": "copyfiles -u 2 \"talks/dist/**/*\" build/talks",
    "build:submodules:install": "git submodule foreach npm install",
    "build:submodules:build": "git submodule foreach npm run build",
    "build": "eleventy --input=src --output=dist",
    "serve": "eleventy --watch --input=src --output=dist --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.8.3",
    "copyfiles": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "standard": "^10.0.3",
    "viperhtml": "^2.17.0"
  }
}
