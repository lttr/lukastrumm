{
  "name": "lukastrumm",
  "private": true,
  "description": "Site about software engineering on the web",
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://lukastrumm.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:lttr/lukastrumm.git"
  },
  "author": "Lukas Trumm",
  "license": "MIT",
  "scripts": {
    "cache:clean": "rimraf .datacache/*",
    "clean": "rimraf dist/*",
    "build": "eleventy",
    "debug": "DEBUG=Eleventy* eleventy",
    "serve": "npm run clean && DEV=true eleventy --watch --serve --quiet --port 2000",
    "lint": "eslint 'src/**/*.{js,md}'; stylelint 'src/**/*.css'",
    "format": "prettier src/**/* --write",
    "start": "npm run serve",
    "dev": "npm run serve",
    "check:links": "npx hyperlink --recursive --pretty --internal --root dist/ dist/**/*.html | npx tap-spot",
    "e2e": "cypress run",
    "e2e:dev": "cypress open"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.9",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.3",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@netlify/plugin-lighthouse": "^2.1.2",
    "@npmcli/git": "^2.1.0",
    "copyfiles": "^2.4.1",
    "cypress": "^9.2.1",
    "eleventy-plugin-lazyimages": "^2.1.2",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "flat-cache": "^3.0.4",
    "glob": "^7.2.0",
    "klipse": "^7.11.2",
    "linkify-string": "^3.0.4",
    "linkifyjs": "^3.0.5",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-highlight-lines": "^1.0.2",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-table-of-contents": "^0.6.0",
    "mermaid": "^8.13.8",
    "netlify-cli": "^10.0.0",
    "netlify-plugin-cypress": "^2.2.0",
    "netlify-plugin-no-more-404": "^0.0.15",
    "node-fetch": "^3.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "puppeteer": "^13.0.1",
    "rimraf": "^3.0.2",
    "simple-icons": "^6.6.0",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "ucontent": "^2.0.0"
  }
}
