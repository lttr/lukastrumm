{
  "name": "lukastrumm",
  "private": true,
  "description": "Site about software engineering on the web",
  "engines": {
    "node": ">=8.0"
  },
  "homepage": "https://lukastrumm.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:lttr/lukastrumm.git"
  },
  "author": "Lukas Trumm",
  "license": "MIT",
  "scripts": {
    "cache:clean": "rimraf .datacache/*",
    "clean": "rimraf dist/*",
    "build": "eleventy",
    "debug": "DEBUG=Eleventy* eleventy",
    "serve": "npm run clean && DEV=true eleventy --incremental --watch --serve --port 2000",
    "lint": "eslint src/**/*.{js,md}",
    "format": "prettier src/**/* --write",
    "start": "npm run serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@npmcli/git": "^2.0.3",
    "copyfiles": "^2.3.0",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "eleventy-plugin-lazyimages": "^1.1.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "flat-cache": "^2.0.1",
    "glob": "^7.1.6",
    "klipse": "^7.10.3",
    "linkifyjs": "^2.1.9",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.3.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-implicit-figures": "^0.9.0",
    "markdown-it-table-of-contents": "^0.4.4",
    "mermaid": "^8.7.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "puppeteer": "^2.1.1",
    "rimraf": "^3.0.2",
    "simple-icons": "^3.5.0",
    "ucontent": "^1.6.0"
  }
}
