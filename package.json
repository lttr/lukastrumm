{
  "name": "lukastrumm",
  "private": true,
  "description": "Site about software engineering on the web",
  "engines": {
    "node": ">=8.0"
  },
  "homepage": "https://lukastrumm.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:lttr/lukastrumm.git"
  },
  "author": "Lukas Trumm",
  "license": "MIT",
  "scripts": {
    "build:submodules": "run-s -l build:submodules:install build:submodules:build build:submodule:*",
    "build:submodule:shortcuts": "copyfiles -u 2 \"shortcuts/dist/**/*\" dist/shortcuts/",
    "build:submodule:talks": "copyfiles -u 2 \"talks/dist/**/*\" dist/talks",
    "build:submodules:install": "git submodule foreach npm install",
    "build:submodules:build": "git submodule foreach npm run build",
    "clean": "rimraf dist/*",
    "build": "eleventy",
    "debug": "DEBUG=Eleventy* eleventy",
    "serve": "eleventy --watch --serve --port 2000",
    "watch": "eleventy --watch",
    "lint": "eslint src/**/*.{js,md}",
    "format": "prettier src/**/* --write",
    "production": "run-s -l build build:submodules",
    "start": "npm run serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "copyfiles": "^2.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "markdown-it": "^10.0.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-implicit-figures": "^0.9.0",
    "markdown-it-table-of-contents": "^0.4.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "simple-icons": "^1.20.0",
    "viperhtml": "^2.17.1"
  }
}
