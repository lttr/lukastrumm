{
  "name": "lukastrumm",
  "private": true,
  "description": "Site about software engineering on the web",
  "engines": {
    "node": ">=14"
  },
  "homepage": "https://lukastrumm.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:lttr/lukastrumm.git"
  },
  "author": "Lukas Trumm",
  "license": "MIT",
  "scripts": {
    "cache:clean": "rimraf .datacache/*",
    "clean": "rimraf dist/*",
    "build": "eleventy",
    "debug": "DEBUG=Eleventy* eleventy",
    "serve": "npm run clean && DEV=true eleventy --watch --serve --port 2000",
    "lint": "eslint src/**/*.{js,md}",
    "format": "prettier src/**/* --write",
    "start": "npm run serve",
    "dev": "npm run serve",
    "check:links": "npx hyperlink --recursive --pretty --internal --root dist/ dist/**/*.html | npx tap-spot",
    "e2e": "cypress run",
    "e2e:dev": "cypress open"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@netlify/plugin-lighthouse": "^1.4.2",
    "@npmcli/git": "^2.0.4",
    "copyfiles": "^2.4.1",
    "cypress": "^6.1.0",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "eleventy-plugin-lazyimages": "^2.1.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "flat-cache": "^3.0.4",
    "glob": "^7.1.6",
    "klipse": "^7.10.5",
    "linkifyjs": "^2.1.9",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^6.0.1",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-highlight-lines": "^1.0.2",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-table-of-contents": "^0.4.4",
    "mermaid": "^8.8.2",
    "netlify-plugin-cypress": "^1.4.1",
    "netlify-plugin-no-more-404": "0.0.15",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "puppeteer": "^5.5.0",
    "rimraf": "^3.0.2",
    "simple-icons": "^4.9.0",
    "ucontent": "^2.0.0"
  }
}
